                                                            <p>
									<label>Géneral</label>
									
							</p>
                                                        </fieldset>
                                                        <div class="clear"></div>
                                                        <fieldset>
                                                        
                                                        <p>
									
								{{ form_row(user_form.username, { 'label' : 'Login' }) }}
								{{ form_row(user_form.nom, { 'label' : 'Nom' }) }}
                                                                {{ form_row(user_form.prenom, { 'label' : 'Prénom' }) }}
                                                                {{ form_row(user_form.email, { 'label' : 'Email' }) }}
                                                                {{ form_row(user_form.adresse, { 'label' : 'Adresse' }) }}
                                                                {{ form_row(user_form.ville, { 'label' : 'Ville' }) }}
                                                                {{ form_row(user_form.telephone, { 'label' : 'Téléphone' }) }}
                                                                {{ form_row(user_form.datenaissance, { 'label' : 'Date de Naissance' }) }}
                                                                {{ form_row(user_form.sexe, { 'label' : 'Sexe' }) }}
                                                                {{ form_row(user_form.profession, { 'label' : 'Profession' }) }}
                                                                {{ form_row(user_form.specialite, { 'label' : 'Spécialité' }) }}
							</p>
                                                        </fieldset>
							
							<!-- End .clear -->
          </td>
          <td>
							<fieldset> <!-- Set class to "column-left" or "column-right" on fieldsets to divide the form into columns -->
							<p>
									<label>Rôles</label>
									
							</p>
                                                        </fieldset>
                                                        <div class="clear"></div>
                                                        <fieldset>
                                                        
                                                       
									
								{% for child in user_form.roles %}
                                                                <p>{{ form_label(child) }} {{ form_widget(child) }}</p>
                                                                {% endfor %}
							
                                                        </fieldset>
							
							<!-- End .clear -->
          </td>
          <td>
							<fieldset> <!-- Set class to "column-left" or "column-right" on fieldsets to divide the form into columns -->
							
