{% extends 'PortailFrontBundle::layout.html.twig' %}
{% block body %}
<div class="forchaser"></div>
<div class="container_12" style="background:url({{asset('bundles/portailfront/images/bg-slider.png')}}) repeat-x center top;height: 70%">
        	<div class="grid_8 alpha">
                <div class="breadcrumb">
                    
                    <a href="./index.html">Home</a> Â» <span>{{entity.titre}}</span>
                </div>
            </div>
            <div class="grid_4 omega">
                <span id="current-date"></span>
            </div>
            
            <div class="clear"></div>
            <div class="separator"></div>
            
            <div class="main-content">
            
                <div class="grid_9 alpha">
                    <div class="post_block">
                        <h2 class="post-title left-outline"><a href="blog-page.php">{{entity.titre }}</a></h2>
                        <ul class="post_data">
                            <li class="post-date">{{entity.datepublication|date('d-M-y H:i:s')}}</li>
                          
                        </ul>
                        <div class="clear"></div>
						<div class="introtext">
                                                    {% set url = 'bundles/portailfront/images/' ~ entity.urlimage %}
                        	<p><img src="{{asset(url)}}" class="alignleft shadow" alt="" style="width: 200px;height:100px " />{{entity.contenu}}</p>
                        </div>
                        <div class="clear"></div>
                        
                        <div class="socshare">
                        	<a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="hogash" data-url="http://www.horus-soft.com" data-text="Check this out">Tweet</a>
							<script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
                            
                            <div class="facebookdiv">
                                <div id="fb-root"></div>
                                <script src="http://connect.facebook.net/en_US/all.js#appId=186052041443843&amp;xfbml=1"></script>
                                <fb:like href="http://www.horus-soft.com" send="true" width="200" show_faces="false" font="arial"></fb:like>
                                
                            </div>

                            <div class="clear"></div>
                       </div><!-- Social share end -->
                       
					</div><!-- Post Block end -->
                    
                    <!-- Post Block end -->
                    
          <!-- Post Block end -->
                    
              

                </div><!-- Grid 9 end -->
                     <div class="grid_3 omega">
                    <div id="sidebar">
                        <div class="sideblock">
                	<h3 class="title">Nos derniers Articles</h3>
                    <ul class="menu">
                        {%for entity in entitylast %}
                    	 <li><a href="{{path('lire_suite_news',{'idnews':entity.id})}}">{{entity.titre}}</a></li>
                    {%endfor %}
                        </ul>
                </div>
				
                       
                    </div><!-- Sidebar End -->
                </div>
               <!-- Grid 3 End -->
                <div class="clear"></div>
            </div>
            
        </div>

{%endblock%}