<script>
    function listcommentaire() 
    {
        var input="name="+document.getElementById('namec').value+"&message="+document.getElementById('messagec').value+"&blogid="+{{blog.id}};
        $.post("{{path('listcomment')}}",input,function(theReponse){
            if($("#commentlist").length > 0)
                {$("#commentlist").empty();}
        $("#commentlist").html(theReponse);
      $('#nbc').val( $('#nbc').val()+1);
        });
    return false;
    }
    
    </script>
  
