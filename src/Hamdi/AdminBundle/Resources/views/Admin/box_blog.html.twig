	<span style="font-size: medium">Ajouter un nouveau article</span>
        <div class="clear"></div>			
                              <form action="{{ path('ajouter_blog') }}" method="post" {{ form_enctype(formblog) }}>
                                    
					<fieldset>
                                            
                                            {{ form_row(formblog.title, { 'label' : 'Titre' }) }}
                                            {{ form_row(formblog.blog, { 'label' : 'Contenu' }) }}
