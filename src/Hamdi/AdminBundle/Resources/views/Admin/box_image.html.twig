<div id="up_img" style="display: none"> <!-- Messages are shown when a link with these attributes are clicked: href="#messages" rel="modal"  -->
	<span style="font-size: medium">Télécharger une image</span>
        <div class="clear"></div>			
                              <form action="{{ path('upload_img') }}" method="post" {{ form_enctype(form1) }}>
                                    
					<fieldset>
                                            <select name="gallery_img">
						<option value="0">Choisir une Galerie...</option>
						{% for gal in galerie_img%}
                                                <option value="{{ gal.id }}">{{ gal.name }}</option>
						{% endfor %}
					    </select>
                                            
					</fieldset>
					<fieldset>
                                            
					    {{ form_row(form1.file, { 'label' : 'Image' }) }}
                                            {{ form_row(form1.description, { 'label' : 'Description' }) }}
					
                                            
					</fieldset>
                                        
					<fieldset>
						<input class="button" type="submit" value="Télécharger" />
						
					</fieldset>
					
				</form>
				
</div> 