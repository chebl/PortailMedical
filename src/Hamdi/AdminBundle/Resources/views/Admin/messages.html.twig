<div id="messages" style="display: none"> <!-- Messages are shown when a link with these attributes are clicked: href="#messages" rel="modal"  -->
				
				<span style="font-size: medium">{{ n }} Messages</span>
                                <div class="clear"></div>
			 {% for msg in msgs %}
				<p>
					<strong>{{ msg.dateenvoi|date('d/m/y H:i') }}</strong> by {{ msg.name }}<br />
					{{ msg.message }}
					<small><a href="{{ path('contact_repondre', { 'id': msg.id }) }}" class="remove-link" title="Remove message">Repondre</a></small>
				</p>
			 
			{% endfor %}	
                                
				
				
				
</div> <!-- End #messages -->
			