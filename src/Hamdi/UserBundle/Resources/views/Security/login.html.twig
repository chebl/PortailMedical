{% extends '::log.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block stylesheets %}
                <!-- Reset Stylesheet -->
                <link href="{{ asset('bundles/hamdiadmin/css/reset.css') }}" type="text/css" rel="stylesheet" />
          			        
		<!-- Main Stylesheet -->
		<link rel="stylesheet" href="{{asset('bundles/hamdiadmin/css/style.css') }}" type="text/css" media="screen" />
		
		<!-- Invalid Stylesheet. This makes stuff look pretty. Remove it if you want the CSS completely valid -->
		<link rel="stylesheet" href="{{asset('bundles/hamdiadmin/css/invalid.css') }}" type="text/css" media="screen" />
{% endblock %}
{% block javascripts %}
  <!-- jQuery -->
		<script type="text/javascript" src="{{asset('bundles/hamdiadmin/js/jquery-1.3.2.min.js') }}"></script>
		
		<!-- jQuery Configuration -->
		<script type="text/javascript" src="{{asset('bundles/hamdiadmin/js/simpla.jquery.configuration.js')}}"></script>
		
		<!-- Facebox jQuery Plugin -->
		<script type="text/javascript" src="{{asset('bundles/hamdiadmin/js/facebox.js') }}"></script>
		
		<!-- jQuery WYSIWYG Plugin -->
		<script type="text/javascript" src="{{asset('bundles/hamdiadmin/js/jquery.wysiwyg.js') }}"></script>
		
		<!-- Internet Explorer .png-fix -->

{% endblock %}
{% block body %}                
           
		
		<div id="login-wrapper" class="png_bg">
			<div id="login-top">
			
				<h1>Simpla Admin</h1>
				<!-- Logo (221px width) -->
				<img id="logo" src="{{asset('bundles/hamdiadmin/images/administrator.png')}}" alt="Simpla Admin" />
			</div> <!-- End #logn-top -->
			
			<div id="login-content">
				
				<form action="{{ path("fos_user_security_check") }}" method="post">
				   <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<p>
                                            <label style="font-size:15px;">{{ 'security.login.username'|trans }}</label>
						<input class="text-input" type="text" name="_username" value="{{ last_username }}" />
					</p>
					<div class="clear"></div>
					<p>
						<label style="font-size:15px;">{{ 'security.login.password'|trans }}</label>
						<input class="text-input" type="password" name="_password" />
					</p>
					<div class="clear"></div>
					<p id="remember-password">
						<input type="checkbox" name="_remember_me" />{{ 'security.login.remember_me'|trans }}
					</p>
					<div class="clear"></div>
					<p>
						<input class="button" type="submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
					</p>
					
				</form>
			</div> <!-- End #login-content -->
			
		</div> <!-- End #login-wrapper -->
		
  {% endblock %}
  

